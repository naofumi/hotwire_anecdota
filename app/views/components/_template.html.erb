<%# locals:(title:, description:) %>

<% content_for(:title, "#{title} | Tailwind, ERB & Stimulus") %>

<div class="mx-auto px-4 my-6 sm:px-6 lg:px-8">
  <div class="px-4 py-5 sm:px-6">
    <h1 class="font-light text-6xl text-center">
      <%= title %>
    </h1>
    <p class="mt-6 leading-6 text-lg text-center">
      <%= description %>
    </p>
  </div>
  <div class="px-4 py-5 sm:p-6 h-96">
    <%= yield %>
  </div>
</div>

